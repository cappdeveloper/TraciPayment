@{
    ViewBag.Title = "Program";
}

<div ng-controller="programController" class="displaynone">
    <div ng-show="PageMode != Mode.ListMode">
        @Html.Partial("_AddEditProgram")
    </div>
    <div ng-show="PageMode == Mode.ListMode">
        @Html.Partial("_ListProgram")
    </div>
</div>

@section Scripts {
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/App/app.js"></script>
    <script src="~/Scripts/App/Services/programService.js"></script>
    <script src="~/Scripts/App/Controllers/programController.js"></script>
    <script src="~/Scripts/App/Filters/appFilters.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
}
