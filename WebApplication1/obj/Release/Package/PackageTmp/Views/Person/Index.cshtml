@{
    ViewBag.Title = "Person";
}


<div ng-controller="personController" class="displaynone">
    <div ng-show="PageMode != Mode.ListMode">
        @Html.Partial("_AddEditPerson")
    </div>
    <div ng-show="PageMode == Mode.ListMode">
        @Html.Partial("_ListPerson")
    </div>
</div>

@section Scripts {

    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/App/app.js"></script>
    <script src="~/Scripts/App/Services/personService.js"></script>
    <script src="~/Scripts/App/Controllers/personController.js"></script>
    <script src="~/Scripts/App/Filters/appFilters.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/DatePicker/bootstrap-datepicker.js"></script>
    <script src="~/Scripts/App/Directives/datePicker.js"></script>
    <script src="~/Scripts/DatePicker/moment.js"></script>
}
